{
	"name": "arb-bot",
	"version": "1.0.0",
	"description": "Arbitrage bot",
	"main": "index.js",
	"scripts": {
		"compile": "npx hardhat compile --quiet",
		"compile-force": "npx hardhat compile --force --quiet",
		"clear:compile": "node scripts/clearAndCompile.js",
		"test": "npx hardhat test --quiet",
		"test-verbose": "npx hardhat test",
		"test:pools": "hardhat test test/ArbBot.pools.test.js",
		"deploy": "hardhat run scripts/deploy.js",
		"deploy:base": "hardhat run scripts/deploy.js --network base",
		"setup:uniswap": "hardhat run scripts/deployRealUniswap.js",
		"reset:pools": "hardhat run scripts/resetUniswapPools.js"
	},
	"keywords": [
		"arbitrage",
		"defi",
		"ethereum",
		"base",
		"hardhat"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
		"@nomicfoundation/hardhat-ethers": "^3.0.0",
		"@nomicfoundation/hardhat-network-helpers": "^1.0.0",
		"@nomicfoundation/hardhat-toolbox": "^4.0.0",
		"@nomicfoundation/hardhat-verify": "^2.0.0",
		"@typechain/ethers-v6": "^0.5.0",
		"@typechain/hardhat": "^9.0.0",
		"chai": "^4.2.0",
		"dotenv": "^16.3.1",
		"ethers": "^6.8.1",
		"fs-extra": "^11.1.1",
		"glob": "^10.3.10",
		"hardhat": "^2.27.1",
		"hardhat-gas-reporter": "^1.0.8",
		"solidity-coverage": "^0.8.0",
		"typechain": "^8.3.0"
	},
	"dependencies": {
		"@openzeppelin/contracts": "^5.0.0",
		"@uniswap/permit2": "github:Uniswap/permit2",
		"@uniswap/universal-router": "github:Uniswap/universal-router",
		"@uniswap/v3-core": "github:Uniswap/v3-core#0.8",
		"@uniswap/v3-periphery": "^1.4.3",
		"@uniswap/v4-core": "github:Uniswap/v4-core",
		"@uniswap/v4-periphery": "github:Uniswap/v4-periphery",
		"prb-math": "^2.4.3"
	}
}
